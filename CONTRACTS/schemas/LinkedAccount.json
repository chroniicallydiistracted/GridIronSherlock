      "format": "date-time"
    },
    "lastSyncAt": {
      "type": "string",
      "format": "date-time",
      "nullable": true
    },
    "needsReauth": {
      "type": "boolean"
    },
    "errorCode": {
      "type": "string",
      "nullable": true
